<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
    <bean id="beanPostProcessor" class="com.nivelle.spring.springlife.lifecycle.MyBeanPostProcessor">
    </bean>

    <bean id="instantiationAwareBeanPostProcessor"
          class="com.nivelle.spring.springlife.lifecycle.MyInstantiationAwareBeanPostProcessor">
    </bean>

    <bean id="beanFactoryPostProcessor" class="com.nivelle.spring.springlife.lifecycle.MyBeanFactoryPostProcessor">
    </bean>

    <bean id="person" class="com.nivelle.spring.springlife.lifecycle.Person" init-method="myInit"
          destroy-method="myDestory" scope="singleton" p:name="张三" p:address="广州" p:phone="17600383849"/>

    <bean id="computer" class="com.nivelle.spring.springlife.lifecycle.Computer"
          init-method="myInit" destroy-method="myDestory"
          scope="singleton"
          p:name="UPCAutoLang-Computer" p:brand="MacBookPro" p:serial="1234567890"/>

</beans>